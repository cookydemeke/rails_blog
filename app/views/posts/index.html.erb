<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<table id="poststable">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
        <tr>
        <td><%= link_to post[:title], user_post_path(@current_user, post) %><td> <%= post[:firstname] %> </td></td>
        <td><%= link_to 'Add Comment', '/new_comment/' + post[:id].to_s + '/' + @current_user[:id].to_s %></td>
        <td><% if post[:user_id] == @current_user[:id] %></p>
          <td><%= link_to 'Destroy', user_post_path(@current_user, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Edit', edit_user_post_path(@current_user, post) %></td>
          <td><%= link_to 'New Post', new_user_post_path(@current_user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

