<h1>Users</h1>

<table id="indextable">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>Chef: <%= link_to user.firstname + " " + user.lastname, user_path(user), class: "links" %></td>
        <td>Username: <%= link_to user[:username], user_path(user), class: "links" %></td>
        <td><% if user[:user_id] == @current_user[:id] %></p>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user_post_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

